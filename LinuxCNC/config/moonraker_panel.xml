<pyvcp>
	<image name='logo' file='logo.png'/>
	<image_bit halpin='selectimage' images='logo'/>

	<meter>
		<size>200</size>
		<min_>0</min_>
		<max_>0.75</max_>
		<text>"POWAH"</text>
		<majorscale>0.1</majorscale>
		<minorscale>0.01</minorscale>	
		<halpin>"powah-dial"</halpin>
		<region1>(0.1,0.3,"blue")</region1>
		<region2>(0.3,0.5,"yellow")</region2>
		<region3>(0.5,1.0,"red")</region3>
	</meter>

	<vbox>
	<relief>FLAT</relief><bd>10</bd>

	<button>
		<relief>GROOVE</relief><bd>1</bd>
		<halpin>"toff-btn"</halpin>
		<text>"SET 0,0"</text>
	</button>

	<button>
		<relief>GROOVE</relief><bd>1</bd>
		<halpin>"bbox-btn"</halpin>
		<text>"BOUNDING BOX"</text>
	</button>

	</vbox>

        <vbox>
        <relief>FLAT</relief><bd>10</bd>

	<!--<button>
                <relief>GROOVE</relief><bd>1</bd>
                <halpin>"uprobe-btn"</halpin>
                <text>"PROBE TOUCH OFF"</text>
	</button>-->

	<button>
		<relief>GROOVE</relief><bd>1</bd>
                <halpin>"bedup-btn"</halpin>
                <text>"BED UP"</text>
        </button>

	<button>
		<relief>GROOVE</relief><bd>1</bd>
                <halpin>"beddown-btn"</halpin>
                <text>"BED DOWN"</text>
        </button>

        </vbox>

	<vbox>
	<relief>FLAT</relief><bd>10</bd>
	
	<vbox>
                <relief>RIDGE</relief>
                <bd>1</bd>
                <label>	
		<text>"RUN TIME"</text>
		<font>("Helvetica",10)</font>
		<padx>1</padx>
		<bg>"#000000"</bg>
 		<fg>"#ffffff"</fg>
                </label>		
 
		<hbox>
			<relief>FLAT</relief>
			<bd>5</bd>
			<label><padx>19</padx></label>
		<u32>
			<halpin>"time-hours"</halpin>
			<font>("Helvetica",14)</font>
			<format>"02.0f"</format>
		</u32>
		<label>
			<text>":"</text>
			<font>("Helvetica",14)</font>
		</label>
		<u32>
			<halpin>"time-minutes"</halpin>
			<font>("Helvetica",14)</font>
			<format>"02.0f"</format>
		</u32>
		<label>
			<text>":"</text>
			<font>("Helvetica",14)</font>
		</label>
		<u32>
			<halpin>"time-seconds"</halpin>
			<font>("Helvetica",14)</font>
			<format>"02.0f"</format>
		</u32>

	</hbox>
	</vbox>
	</vbox>
</pyvcp>
